@{
    ViewData["Title"] = "Employee List";
}

@model IEnumerable<Employee>

<h1 class="bg-info text-white">Employee List</h1>
<a asp-action="Ecreate" class="btn btn-secondary">Add Employee</a>
<table class="table table-sm table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Designation</th>
        <th>DepartmentId</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (Employee emp in Model)
    {
        <tr>
            <th>@emp.Id</th>
            <th>@emp.Name</th>
            <th>@emp.Designation</th>
            <th>@emp.DepartmentId</th>
            <th>
                <a class="btn btn-sm btn-primary" asp-action="Update"
                   asp-route-id="@emp.Id">Update</a>
            </th>
            <th>
                <form method="post" asp-action="Delete" asp-route-id="@emp.Id">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </th>
        </tr>
    }

</table>