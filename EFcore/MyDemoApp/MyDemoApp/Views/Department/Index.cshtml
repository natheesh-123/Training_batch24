@{
    ViewData["Title"] = "Department List";
}

@model IEnumerable<Department>

<h1 class="bg-info text-white">Departments List</h1>
<a asp-action="Create" class="btn btn-secondary">Create Department</a>
<table class="table table-sm table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (Department dept in Model)
    {
        <tr>
            <th>@dept.Id</th>
            <th>@dept.Name</th>
            <th>
                <a class="btn btn-sm btn-primary" asp-action="Update">Update</a>
            </th>
            <th>
                <form asp-action="Delete">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </th>
        </tr>
    }

</table>
