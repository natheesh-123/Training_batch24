@{
    ViewData["Title"] = "Department List";
}

@model IEnumerable<Department>

<h1 class="bg-info text-white">Departments List</h1>
<a asp-action="Create" class="btn btn-secondary">Create Department</a>
<table class="table table-sm table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (Department dept in Model)
    {
        <tr>
            <th>@dept.Id</th>
            <th>@dept.Name</th>
            <th>
                <a class="btn btn-sm btn-primary" asp-action="Update"
                asp-route-id="@dept.Id">Update</a>
            </th>
            <th>
                <form method="post" asp-action="Delete" asp-route-id="@dept.Id">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </th>
        </tr>
    }

</table>


